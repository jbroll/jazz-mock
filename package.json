{
  "name": "jazz-mock",
  "version": "0.1.0",
  "description": "Testing utilities for Jazz.tools applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./vitest": {
      "import": "./dist/vitest/index.js",
      "types": "./dist/vitest/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "npx biome check src",
    "format": "npx biome check --write src",
    "prepublishOnly": "npm run build",
    "prepare": "./scripts/git-hooks/install.sh",
    "setup:hooks": "./scripts/git-hooks/install.sh"
  },
  "keywords": [
    "jazz",
    "jazz-tools",
    "testing",
    "mock",
    "vitest",
    "covalue"
  ],
  "author": "jbroll",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jbroll/jazz-mock.git"
  },
  "bugs": {
    "url": "https://github.com/jbroll/jazz-mock/issues"
  },
  "homepage": "https://github.com/jbroll/jazz-mock#readme",
  "peerDependencies": {
    "vitest": ">=1.0.0",
    "jazz-tools": ">=0.19.0"
  },
  "peerDependenciesMeta": {
    "vitest": {
      "optional": false
    },
    "jazz-tools": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^22.0.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
